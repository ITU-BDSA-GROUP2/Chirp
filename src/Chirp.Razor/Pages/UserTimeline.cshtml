@page "/{author}"
@model Chirp.Razor.Pages.UserTimelineModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("author");
}

@if (User.Identity!.IsAuthenticated && routeName!.Equals(User.Identity!.Name)) 
{
    <div class="cheepbox">
        <h3>What's on your mind @(User.Identity!.Name!)?</h3>
        <form method="post" asp-page-handler="Cheep">
            <input style="float: left" type="text" asp-for="CheepText">
            <input type="submit" value="Share">
        </form>
        @if (!ViewData.ModelState.IsValid) 
        {
            <ul class="errorMSG">
                <li>@Html.ValidationMessage("ErrorMessageLength")</li>
            </ul>
        }
    </div>
}

<div>
    <h2> @routeName's Timeline </h2>
    @if (Model.Cheeps.Any())
    {
        <partial name="Shared/_Cheeps.cshtml" />
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
