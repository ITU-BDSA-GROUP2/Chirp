@model Chirp.Razor.Pages.TimelineModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="cheepbox">
        <h3>What's on your mind @(User.Identity!.Name!)?</h3>
        <form method="POST" asp-page-handler="Cheep">
            <input style="float: left" type="text" asp-for="CheepText" autocomplete="off">
            <input type="submit" value="Share">
        </form>
        @if (!ViewData.ModelState.IsValid) 
        {
            <ul class="errorMSG">
                <li>@Html.ValidationMessage("ErrorMessageLength")</li>
            </ul>
        }
    </div>